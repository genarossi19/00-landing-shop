---
import FavButton from "./FavButton.jsx";

const { title, price, src } = Astro.props;
---

<article class="relative">
  <a href="/favorites">
    <div
      id="item"
      class="p-5 bg-white rounded-2xl shadow-xl transition-all ease-in-out hover:shadow-2xl h-[380px] min-w-[230px]"
    >
      <img src={src} alt={title} class="w-[200px] h-[200px] rounded-2xl" />
      <div
        id="info"
        class="flex items-end justify-between border-b border-1 py-3"
      >
        <div>
          <h5 class="font-semibold text-secondary-black text-lg">{title}</h5>
          <div id="btc" class="mt-3 flex items-center gap-1">
            <!-- aca va un icono o un signo $ -->
            <p id="price" class="text-[18px] text-primary-green font-medium">
              $ {price}
            </p>
          </div>
        </div>
        <p class="text-[#9C9C9C] text-[12px] pb-1">5 de 33</p>
      </div>
      <div
        id="bid"
        class="text-[14px] pt-3.5 pb-1 px-0 flex items-center justify-between"
      >
        <p class="text-[#9C9C9C] py-1">30% off</p>
      </div>
    </div>
  </a>
  <div class="absolute right-4 bottom-6">
    <FavButton client:visible />
  </div>
</article>
