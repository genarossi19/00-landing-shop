---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Navbar from "@/components/Navbar.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="app">
      <header class="header-blur fixed top-0 w-full">
        <Navbar />
      </header>

      <main>
        <slot />
      </main>
      <footer class="bg-secondary-black text-white"></footer>
    </div>
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

  html {
    font-family: "Poppins", sans-serif;
    background-image: linear-gradient(
        45deg,
        rgba(187, 187, 187, 0.04) 0%,
        rgba(187, 187, 187, 0.04) 50%,
        rgba(86, 86, 86, 0.04) 50%,
        rgba(86, 86, 86, 0.04) 100%
      ),
      linear-gradient(
        135deg,
        rgba(166, 166, 166, 0.04) 0%,
        rgba(166, 166, 166, 0.04) 50%,
        rgba(92, 92, 92, 0.04) 50%,
        rgba(92, 92, 92, 0.04) 100%
      ),
      linear-gradient(90deg, rgb(239, 243, 246), rgb(239, 243, 246));
    background-size: 200px 200px;

    /* color-scheme: light dark; */
    color: #030617;
  }
</style>
